## Copy this file to `ehr_launch.env` and customize the values for your stack.

# SMART client (the app under test). Matches `standalone_launch.env`.
SMART_BASE_URL=https://fhir.localhost/fhir
SMART_CLIENT_ID=demo-smart-app
SMART_REDIRECT=http://127.0.0.1:8765/callback
SMART_SCOPE="launch/patient patient/*.rs openid fhirUser offline_access"
SMART_HTTPS_AUTH_BASE=https://keycloak.localhost/realms/smart/protocol/openid-connect
# SMART_AUTOMATION_ENDPOINT=http://127.0.0.1:4000/authorize

# EHR/EMR simulator that creates the launch context.
SMART_EHR_ISS=https://fhir.localhost/fhir
SMART_EHR_KEYCLOAK_BASE=https://keycloak.localhost
SMART_EHR_REALM=smart
SMART_EHR_CLIENT_ID=demo-emr
SMART_EHR_SCOPE="openid Context.write"
SMART_EHR_REDIRECT=http://127.0.0.1:8765/emr-callback
SMART_EHR_PATIENT=Patient/example-1
# Optional metadata embedded into the launch context payload.
# SMART_EHR_INTENT=order
# SMART_EHR_TENANT=tenant-alpha
# SMART_EHR_CONTEXT_URL=https://keycloak.localhost/realms/smart/smart-on-fhir/context
SMART_EHR_CONTEXT_SCHEMA_URL=https://raw.githubusercontent.com/zedwerks/keycloak-smart-fhir/main/context-schema/launch-context_v1.json
SMART_EHR_LAUNCH_TEMPLATE=Tests/Fixtures/launch-context.json
# SMART_EHR_AUTOMATION_ENDPOINT=http://127.0.0.1:4000/authorize
# SMART_EHR_REDIRECT_TIMEOUT=180


