## Copy this file to standalone_launch.env and adjust values for your environment.
# SMART_BASE_URL=https://fhir.localhost/fhir
# SMART_BASE_URL=https://localhost:8443/v/r5/sim/WzIsIiIsIiIsIk1BTlVBTCIsMCwwLDAsIiIsIiIsIiIsIiIsIiIsIiIsIiIsMCwxLCIiXQ/fhir
# SMART_CLIENT_ID=demo-smart-app
# SMART_REDIRECT=http://127.0.0.1:8765/callback
# Set SMART_REDIRECT to the exact redirect URI that is registered with your authorization server.
# The standalone launch tests will bind their loopback listener to the host, port, and path encoded
# here; leave it unset to let the harness pick a random 127.0.0.1 port with the /callback path.
# MART_SCOPE="launch/patient patient/*.rs openid fhirUser offline_access"
# SMART_AUTOMATION_ENDPOINT=http://127.0.0.1:4000/authorize

# SMART_HTTPS_AUTH_BASE=https://localhost:8443

SMART_BASE_URL=https://fhir.localhost/fhir
SMART_CLIENT_ID=demo-smart-app
SMART_REDIRECT=http://127.0.0.1:8765/callback
SMART_SCOPE="launch/patient patient/*.rs openid fhirUser offline_access"

# Optional: point to a custom automation harness if you have one running locally.
# SMART_AUTOMATION_ENDPOINT=http://127.0.0.1:4000/authorize

# Base URL for Keycloak's OpenID Connect endpoints (authorization, token, etc.).
SMART_HTTPS_AUTH_BASE=https://keycloak.localhost/realms/smart/protocol/openid-connect